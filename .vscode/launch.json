    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Samples/TypeDiscovery/bin/Debug/net6.0/TypeDiscovery.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Samples/TypeDiscovery",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "runtimeArgs": [
                "test"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Mocha Tests",
            "runtimeExecutable": "yarn",
            "cwd": "${workspaceFolder}/Source/JavaScript",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}